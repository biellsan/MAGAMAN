<script>
   var dateString = "{{ block.settings.date }}";
  var countDownDate;

  if (dateString) {
    countDownDate = moment(dateString, "MM/DD/YYYY").toDate().getTime();
    if (isNaN(countDownDate)) {
      document.getElementById("blackfriday-countdown").innerHTML = "Data inv√°lida. Por favor, adicione uma data no formato MM/DD/YYYY.";
      document.getElementById("blackfriday-countdown").classList.add("erro");
    }
  } else {
    document.getElementById("blackfriday-countdown").innerHTML = "Por favor, adicione uma data no formato MM/DD/YYYY.";
    document.getElementById("blackfriday-countdown").classList.add("erro");
  }

  var myfunc = setInterval(function() {
    if (!countDownDate) return;
    var now = new Date().getTime();
    var timeleft = countDownDate - now;
    if (timeleft <= 0) {
      clearInterval(myfunc);
      document.getElementById("blackfriday-countdown").innerHTML = "{{ block.settings.text_jhonhyx }}";
      document.getElementById("blackfriday-countdown").classList.add("encerrado");
      return;
    }
    var days = Math.floor(timeleft / (1000 * 60 * 60 * 24));
    var hours = Math.floor((timeleft % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    var minutes = Math.floor((timeleft % (1000 * 60 * 60)) / (1000 * 60));
    var seconds = Math.floor((timeleft % (1000 * 60)) / 1000);
    var displayDays = days + "D ";
    if (days < 10) {
      displayDays = "0" + displayDays;
    }
    var displayTime = displayDays + hours + " : " + minutes + " : " + seconds;
    document.getElementById("blackfriday-countdown").innerHTML = displayTime;
  }, 1000)

  var estoqueNumber = Math.floor(Math.random() * 50);
  document.querySelector(".blackfriday-unit").innerHTML = estoqueNumber;
</script>
